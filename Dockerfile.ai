# Dockerfile for AI Python service
FROM python:3.10-slim

# Set work directory
WORKDIR /app

# Install python dependencies
COPY src/ai_service/requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

# Copy AI service code
COPY src/ai_service/ .

# Expose AI service port
EXPOSE 5001

# Run the AI service
CMD ["gunicorn", "--bind", "0.0.0.0:5001", "ai_service:app"]
