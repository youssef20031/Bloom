{
  "name": "Bloom",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/server/main.js -w src/server",
    "start": "cross-env NODE_ENV=production node src/server/main.js",
    "build": "vite build",
    "test": "jest",
    "client": "vite",
    "serve:ai": "python src/ai_service/ai_service.py",
    "install:ai": "pip install --no-cache-dir --break-system-packages -r src/ai_service/requirements.txt",
    "setup": "npm install && npm run install:ai",
    "start:both": "npx concurrently \"npm run dev\" \"npm run serve:ai\""
  },
  "dependencies": {
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "lucide-react": "^0.540.0",
    "mongoose": "^8.17.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^6.30.1",
    "react-toastify": "^11.0.5",
    "recharts": "^3.1.2",
    "remark-gfm": "^4.0.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "vite-express": "*",
    "wouter": "^3.7.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.1",
    "jest": "^30.0.5",
    "mongodb-memory-server": "^10.2.0",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "supertest": "^7.1.4",
    "tailwindcss": "^4.1.12",
    "vite": "^6.3.3"
  }
}
